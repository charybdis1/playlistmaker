<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/white_color"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="@string/settings_title" />


    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingVertical="@dimen/settings_padding_vertical"
        android:paddingStart="16dp"
        android:text="Темная тема"
        android:textSize="16sp"
        android:thumbTint="@color/switch_thumb"
        android:trackTint="@color/switch_track" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/white_color"
        android:drawableEnd="@drawable/ic_share"
        android:gravity="start"
        android:paddingVertical="@dimen/settings_padding_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:text="@string/settings_share"
        android:textAllCaps="false"
        android:textColor="@color/text_color"
        android:textSize="16sp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/white_color"
        android:drawableEnd="@drawable/ic_support"
        android:gravity="start"
        android:paddingVertical="@dimen/settings_padding_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:text="@string/settings_support"
        android:textAllCaps="false"
        android:textColor="@color/text_color"
        android:textSize="16sp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/white_color"
        android:drawableEnd="@drawable/ic_arrow"
        android:gravity="start"
        android:paddingVertical="@dimen/settings_padding_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:text="@string/settings_agreement"
        android:textAllCaps="false"
        android:textColor="@color/text_color"
        android:textSize="16sp" />


</LinearLayout>