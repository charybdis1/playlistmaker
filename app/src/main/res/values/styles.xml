<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">
            @color/white_color
        </item>
        <item name="textAllCaps">
            false
        </item>
        <item name="android:textColor">
            @color/main_text_color
        </item>
        <item name="cornerRadius">
            16dp
        </item>
        <item name="iconGravity">
            textStart
        </item>
        <item name="iconPadding">
            8dp
        </item>
        <item name="iconTint">
            @color/main_text_color
        </item>
        <item name="android:insetTop">
            0dp
        </item>
        <item name="android:insetBottom">
            0dp
        </item>
        <item name="fontFamily">
            @font/ys_display_medium
        </item>
        <item name="android:textSize">
            22sp
        </item>
    </style>


    <style name="SettingsButton">
        <item name="background">
            @android:color/transparent
        </item>
        <item name="backgroundTint">
            @color/white_color
        </item>
        <item name="android:gravity">
            start
        </item>
        <item name="android:paddingVertical">
            20dp
        </item>
        <item name="android:paddingStart">
            16dp
        </item>
        <item name="android:paddingEnd">
            12dp
        </item>
        <item name="android:textAllCaps">
            false
        </item>
        <item name="android:textColor">
            @color/settings_text_color
        </item>
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:fontFamily">
            @font/ys_display_regular
        </item>
    </style>

    <style name="track_text">
        <item name="fontFamily">
            @font/ys_display_regular
        </item>

        <item name="android:ellipsize">
            end
        </item>
        <item name="maxLines">
            1
        </item>

    </style>

    <style name="RoundButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:background">
            @drawable/shape_button
        </item>
        <item name="android:fontFamily">
            @font/ys_display_medium
        </item>
        <item name="textAllCaps">
            false
        </item>
        <item name="android:textSize">
            14sp
        </item>
        <item name="backgroundTint">
            @color/black_white_text
        </item>
    </style>

    <style name="PlayerInfoGrayText">
        <item name="fontFamily">
            @font/ys_display_regular
        </item>

        <item name="android:textSize">
            13sp
        </item>

        <item name="android:textColor">
            @color/always_gray
        </item>
    </style>

    <style name="PlayerInfoBlackWhiteText">
        <item name="fontFamily">
            @font/ys_display_regular
        </item>

        <item name="android:textSize">
            13sp
        </item>

        <item name="android:textColor">
            @color/black_white_text
        </item>
    </style>
</resources>